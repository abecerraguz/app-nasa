{{> partials/navbar }}

<div class="container" id="despues">
  
    <div class="row">
      {{!-- Inicio de contenedor --}}
      <div class="contenedor">
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col" class="maxAncho-10">Nombre</th>
                    <th scope="col" class="maxAncho-10">Apellido</th>
                    <th scope="col">Email</th>
                    <th scope="col">Celular</th>
                    <th scope="col" class="maxAncho-10">Estado</th>
                    <th scope="col">Acción</th>
                    </tr>
                </thead>
                <tbody id="infoTable">

                    {{#each infoUsers}}

                    <tr>
                        <td data-label="NOMBRE">{{this.first_name}}</td>
                        <td data-label="APELLIDO">{{this.last_name}}</td>
                        <td data-label="EMAIL">{{this.email}}</td>
                        <td data-label="CELULAR">{{this.phone}}</td>
                        <td data-label="ESTADO"><input class="form-check-input" type="checkbox" {{#if this.active}}checked {{/if}} id="{{this.staff_id}}"></td>
                        <td>
                            <button type="button" name="{{this.email}}" class="btn btn-danger-usuarios  btn-sm edit" id="{{this.staff_id}}">
                                Editar
                            </button>
                            <button type="button" name="{{this.email}}" class="btn btn-danger-usuarios  btn-sm delete" id="_{{this.staff_id}}">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

      </div>
      {{!-- Cierre de contenedor --}}
    </div>

</div>



<div class="modal fade" id="infoSesion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            {{#if logout}}
            <div class="modal-header">
                <h5 class="infoTienda my-0"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            {{/if}}
            <div class="modal-body text-center text-uppercase my-2">
                {{#if logout}}
                    <p>{{> partials/logout}} <span id="result" class="text-danger"></span></p>
                    <p>Si desea continuar con la sesión </p>
                    <button type="button" id="nextSesion" class="btn btn-secondary" data-bs-dismiss="modal">Continuar con la sesión</button>
                {{/if}}
            </div>
