                                <label for="year" class="form-label">Email</label>
                                <input type="text" id="email" class="form-control">
                            </div>
                            <div class="mb-3 col-6">
                                <label for="year" class="form-label">Celular</label>
                                <input type="text" id="celular" class="form-control">
                            </div>
                    </div>
                     <div class="row">
                            <div class="mb-3 col-6">
                                <select class="form-select" id="selectTienda">
                                    <option value="-1" selected>Tienda a asignar</option>
                                    <option value="1">Santa Cruz Bikes</option>
                                    <option value="2">Baldwin Bikes</option>
                                    <option value="3">Rowlett Bikes</option>
                                </select>
                            </div>
                            <div class="mb-3 col-6">
                                <select class="form-select" id="selectActive">
                                    <option value="-1" selected>Activar</option>
                                    <option value="0">Inactivo</option>
                                    <option value="1">Activo</option>
                                </select>
                            </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-12">
                                <label for="year" class="form-label">Pasword</label>
                                <input type="text" id="password" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success m-auto text-uppercase editar">Guardar</button>
                    </div>
                </form>
             
